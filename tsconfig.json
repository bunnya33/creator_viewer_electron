{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/renderer/*"
      ]
    }
  },
  "include": [
    "src/renderer",
    "src/main",
    "global.d.ts",
    "electron_channel.d.ts"
  ]
}